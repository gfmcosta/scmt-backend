@model scmt_backend.Models.Submenu

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Submenu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="descricao" class="control-label"></label>
                <input asp-for="descricao" class="form-control" />
                <span asp-validation-for="descricao" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="visivel" /> @Html.DisplayNameFor(model => model.visivel)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="menuFK" class="control-label"></label>
                <select asp-for="menuFK" class="form-control" asp-items="ViewBag.menuFK"></select>
                <span asp-validation-for="menuFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

