@model scmt_backend.Models.Menu

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar item</h1>

<h3>Tem a certeza que quer apagar este item?</h3>
<div>
    <h4>Menu</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.visivel)
        </dt>
        <dd class="col-sm-10">
            @if (Model.visivel)
            {
            <span class="text-success">✔️</span>
            }
            else
            {
            <span class="text-danger">❌</span>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à lista</a>
    </form>
</div>
